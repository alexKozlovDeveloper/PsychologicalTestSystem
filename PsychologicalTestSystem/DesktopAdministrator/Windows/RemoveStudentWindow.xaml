<Window x:Class="DesktopAdministrator.Windows.RemoveStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RemoveStudentWindow" Height="188" Width="230.4">
    <Grid>
        <Label Content="Выберете студента для удаления" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Группа" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Студент" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="ComboboxGroups" HorizontalAlignment="Left" Margin="80,44,0,0" VerticalAlignment="Top" Width="134" SelectionChanged="ComboboxGroups_SelectionChanged"/>
        <ComboBox Name="ComboboxStudents" HorizontalAlignment="Left" Margin="80,75,0,0" VerticalAlignment="Top" Width="134"/>
        <Button Name="ButtonCancel" Content="Отмена" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top" Width="89" Height="29" Click="ButtonCancel_Click"/>
        <Button Name="ButtonRemove" Content="Удалить" HorizontalAlignment="Left" Margin="125,119,0,0" VerticalAlignment="Top" Width="89" Height="29" Click="ButtonRemove_Click"/>

    </Grid>
</Window>
